<style>
	.modal-dialog {
		width: auto;
		position: absolute;
		top: 25%;
		bottom: 25%;
		left: 25%;
		right: 25%;
		width: auto;
		margin: auto;
	}
	/*.form-group {
		margin-bottom: 0px;
	}*/
	h4 {
		font-size: 20px;
	}
	@media (max-width: 767px) {
		.modal-dialog {
			top: 5%;
			/*bottom: 5%;*/
			left: 1%;
			right: 1%;	
		  }
		  h4 {
		  	font-size: 1.5em;
		  }
