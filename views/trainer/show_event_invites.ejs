		<div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="non_ajax_call('/trainer/dashboard_second/<%= currentUser.id %>')">&times;</button>
		        <h4 class="modal-title" id="myModalLabel">Invitations&nbsp;<span class="badge badge-warning"><%= events.length %></span></h4>
		      </div>
		      <% if(events.length == 0) { %>
		      	<div class="modal-body">
			    	<p>No more invites</p>
			    </div>
			  <% } %>
		      <% events.forEach(function(event, i) { %>
		      		<div class="<%= i == 0 ? '' : 'display-none'%>">
				      <div class="modal-body">
				      		<div class="trainer-events-list padded">
			      				<div class="col-md-9">
			      					<h3 style="margin-top: 0px"><%= event.name %></h3>
			      					<% if(event.description != null) { %>
			      						<h4 style="margin-top: 0px"><%= event.description %></h4>
			      					<% } %>
			      					<p>
			      						<%= event.date.toDateString() %>
			      						&nbsp;
			      						<%= event.date.getHours() %>:<%= event.date.getMinutes() %> to
			      						<%= event.endDate != null ? event.endDate.getHours() : '' %>:<%= event.endDate != null ? event.endDate.getMinutes() : '' %>
			      					</p>
			      					<p>
			      						<%= event.org %>
			      					</p>
			      				</div>
			      			</div>
				      	</div>
						<div class="modal-footer">
					    	<!--
					    	<span style="display: inline-block; float: left"><%= (i+1) %>/<%= events.length %></span>
					    	-->
					    	<a class="btn btn-success" onclick="non_ajax_call('/trainer/event_confirm/<%= event.id %>')">Accept</a>
					    	<a class="btn btn-danger" onclick="if(confirm('Are you sure?')) non_ajax_call('/trainer/event_reject/<%= event.id %>')">Reject</a>
					    	<a class="btn btn-warning" onclick="non_ajax_call('/trainer/event_triage/<%= event.id %>')">Triage</a>
					  	</div>
					</div>
				<% }); %>
			</div>
		</div>
	