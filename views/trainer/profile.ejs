<!-- BILLING -->
	<div class="tab-pane fade in active user_profile_outer_div trainer" id="billing" style="text-align: left">
		<div class="user_profile">
			<div class="row">
				<div>
					<div class="content_name" style="">
	                  <h4>
	                    Billing Details
	                  </h4>
	                </div>
		       	</div>
		    </div>
		</div>
		
		<div class="user_profile left-align">
			<!--<h4 style="text-align: left;">LOGIN</h4>-->
