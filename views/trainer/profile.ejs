		               </span>
	                </div>
	                <div class="content" style="padding-left: 4px;">
	                  <label> Total training hours:
	                  </label>
	                  <span id="billing_training_hours">
		                  <label>
		                    <%= billing != null && billing.trainingHours != null ? billing.trainingHours : '-' %>
		                  </label>
		                  <!--
		                  <span class="fui-new visibility_hidden" onclick="ajax_call('/trainer/edit_billing/trainingHours','billing_training_hours')"></span>
		              	-->
		              </span>
	                </div>
	                <div class="content" style="padding-left: 4px;">
	                  <label> Total Un-Billed hours:
	                  </label>
	                  <span id="billing_unbilled_hours">
		                  <label>
		                    <%= billing != null && billing.unBilledHours != null ? billing.unBilledHours : '-' %>
		                  </label>
		                  <!--
		                  <span class="fui-new visibility_hidden" onclick="ajax_call('/trainer/edit_billing/unBilledHours','billing_unbilled_hours')"></span>
	                  	-->
	                  </span> 	
	                </div>
	            </div>
			</div>
		</div>
	</div>
<!-- END BILLING -->

<!-- TAGS -->
	<div class="tab-pane fade in active user_profile_outer_div trainer" id="tags" style="text-align: left">
		<div class="user_profile">
			<div class="row">
				<div>
					<div class="content_name" style="">
	                  <h4>
	                    Skills
	                  </h4>
	                </div>
		       	</div>
		    </div>
		</div>
		
		<div class="user_profile left-align">
			<hr>
			<div class="row flat-tags" id="trainer_tags">
				<% tags.forEach(function(tag) { %>
					<span class='btn_toolbar_btn btn btn-primary'><%= tag.name %><span style='margin-left: 10px; cursor: default' onclick="non_ajax_call('/trainer/delete_tag/<%= tag.id %>')">X</span></span>
				<% }); %>
			</div>
			
		</div>
		
		<div class="user_profile left-align">
			<hr>
			<form action="/trainer/add_tag" method="POST" id="trainer_add_tag_form">
				<input type="text" class="form-control" style="width:60%;display: inline-block" id="tag_text" name="tag_text"/>
				<a href="#" onclick="submit_form('trainer_add_tag_form')" class="btn_toolbar_btn btn btn-default"><span class="fui-plus"></span></a>
			</form>
		</div>
	</div>
<!-- END TAGS -->

<script type="text/javascript">
$("#tag_text").autocomplete({
      source: function( request, response ) {
      	$.ajax({
          url: "/content/get_tags/"+request.term,
	      success: function(data) {
	      	response(data);
	      }
        });
      },
      minLength: 1
});
</script>
			
			
		
				
				
