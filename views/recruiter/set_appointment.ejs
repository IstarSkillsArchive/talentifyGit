<style>
	.modal-dialog {
		width: auto;
		position: absolute;
		top: 10%;
		/*bottom: 15%;*/
		left: 25%;
		right: 25%;
		width: auto;
		margin: auto;
	}
	.form-group {
		margin-bottom: 0px;
	}
	h4 {
		font-size: 20px;
	}
	@media (max-width: 767px) {
		.modal-dialog {
			top: 5%;
			/*bottom: 5%;*/
			left: 1%;
			right: 1%;	
		  }
		  h4 {
		  	font-size: 1.5em;
		  }
	}
</style>

<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="hide_div('modal_preview');hide_class('DimBg')">&times;</button>
        <h4 class="modal-title">Schedule Interview</h4>
      </div>
      <div class="modal-body">
      		<form role="form" method="POST" action="/recruiter/schedule_interview" target="interview_target">
				<input type="hidden" name="CoachId" class="form-control" id="CoachId" value="<%= recruiter_id %>">
			  	<input type="hidden" name="UserId" class="form-control" id="UserId" value="<%= user_id %>">
			  	<input type="hidden" name="JobId" class="form-control" id="JobId" value="<%= job_id %>">
			  	<input type="hidden" name="status" class="form-control" id="status" value="confirm">
			  	<input type="hidden" name="option" class="form-control" id="option" value="1">
			  	<input type="hidden" name="meetingName" class="form-control" id="meetingName" value="Interview">
			  	
			  	<div class="form-group">
				    <input type="text" name="date" class="form-control" id="date" placeholder="Date: dd/mm/yyyy">
				</div>
				<div class="form-group" style="margin-top: 20px">
			    	<input type="text" name="time" class="form-control" id="time" placeholder="Time: hh:mm">
			  	</div>
			 	<div style="margin-top: 20px">
			 		<button type="submit" class="btn btn-success">Submit</button>
			 		<button type="button" class="btn btn-default" onclick="hide_div('modal_preview');hide_class('DimBg')">Cancel</button>
				</div>
			</form>
			<iframe id="interview_target" name="interview_target" style="width:0;height:0;border:0px"></iframe>
		</div>
    </div>
</div>	