<script src="/javascripts/fullcalendar.min.js" type="text/javascript"></script>

<div class="animated fadeIn padded bg-info" id="user-calendar">
  	<button type="button" class="close pull-right turbo-toggle">&times;</button>
  	
	<!-- start calendar -->
	<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div id="fullcalendar"></div>
        </div>
      </div>
    </div>
  </div>
</div>
	<!-- end calendar -->
</div>

<script>
	$('#fullcalendar').fullCalendar({
        header: {
			left: 'prev,next today',
			center: 'title',
			right: 'month,agendaWeek,agendaDay'
		},
		editable: false,
		events: [
			<% events_classes.forEach(function(event, i) { %>
				{
					id: '<%= event.id %>',
					title: '<%= event.name %>',
					start: '<%= event.date %>',
					end: '<%= event.date %>',
					allDay: false
				}
				<% if(i < events_classes.length - 1) { %>
				,
				<% } %>
			<% }); %>
			<% events_tests.forEach(function(event, i) { %>
				{
					id: '<%= event.id %>',
					title: '<%= event.name %>',
					start: '<%= event.date %>',
					end: '<%= event.date %>',
					allDay: false
				}
				<% if(i < events_tests.length - 1) { %>
				,
				<% } %>
			<% }); %>
		]
    });
</script>



