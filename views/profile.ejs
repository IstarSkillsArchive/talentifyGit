<% layout('new-layout') %>

<div class="navbar navbar-inverse" role="navigation" style="">
  
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-01">
	      <span class="sr-only">Toggle navigation</span>
	  </button>
      <a class="navbar-brand" href="/dashboard"><!--<img src="/flat-ui/common-files/icons/Map@2x.png" height="30" width="30"/>--><span class="glyphicon glyphicon-gift"></span></a>
    </div>
    <div class="navbar-collapse collapse" id="navbar-collapse-01">
		<% if(currentUser) { %>
			<ul class="nav navbar-nav">
				<% if(currentUser.isProfileCompleted == true && currentUser.isTestTaken == true && currentUser.isMetCoach == true) { %>
					<li id="gym_li"><a href="/users/gym/<%= currentUser.id %>" >Gym</a></li>
					<li><a href="/users/calendar" >Events</a></li>
					<li><a href="/users/report_card/<%= currentUser.id %>">Report Card</a></li>
					<li class="active"><a href="/users/profile/<%= currentUser.id %>">Profile</a></li>
				<% } %>
			</ul>
			 <ul class="nav navbar-nav pull-right">
			 		<li><a href="#"><%= (currentUser.first_name != null && currentUser.first_name != '') ? 'Hi, '+currentUser.first_name : 'Hi, '+currentUser.username %></a></li>
			 		<li title="Logout"><a href="/logout"><span class="glyphicon glyphicon-log-out"></span></a></li>
			 </ul>
		<% } %>
	</div>
  
</div>

<% if(user.organization.type == 'College' && isFirstTime == 'true') { %>
	<script>
		non_ajax_call('/users/enrollment_form/<%= user.id %>/<%= isFirstTime %>');
	</script>
<% } %>

<% if(user.organization.type == 'College' && isFirstTime == 'false') { %>
	<ul class="nav nav-tabs">
		<li class="li_tab active"><a>Personal Profile</a></li>
	 	<li class="li_tab"><a href="/users/enrollment_form/<%= user.id %>/<%= isFirstTime %>">Enrollment Form</a></li>
	</ul>
<% } %>	

<div class="tab-pane fade in active user_profile_outer_div" id="profile" style="text-align: center;overflow: hidden; <%= user.organization.type == 'College'  ? 'border-top: 0px; border-top-right-radius: 0px; border-top-left-radius: 0px; margin-top: 0px' : ''%>">
		<div class="information col-md-8" style="">
			<div class="user_profile" style="text-align: left">
				<div class="content_name" style="padding-left: 4px;">
                  <h4>
                    <%= user.first_name %>&nbsp;<%= user.last_name %>
                  </h4>
                </div>
				<!--<h4 style="text-align: left;">LOGIN</h4>-->
				<hr>
				<div class="row">
					<div>
						<div class="content" style="padding-left: 4px;">
		                  <label> Username:
		                  </label>
		                  <label>
		                    <%= user.username %>
		                  </label>
		                </div>
		                <div class="content" style="padding-left: 4px;">
		                  <label> Email:
		                  </label>
		                  <label>
		                    <%= user.email %>
		                  </label>
		                </div>
		            </div>
				</div>
			</div>
			
			<div class="user_profile" style="text-align: left">
				<!--<h4 style="text-align: left;">ORGANIZATION</h4>-->
				<hr>
				<div class="row">
					<div>
						<div class="content" style="padding-left: 4px;">
		                  <label> Organization:
		                  </label>
		                  <label>
		                    <%= user.organization != null ? user.organization.name : '-' %>
		                  </label>
		                </div>
		                <div class="content" style="padding-left: 4px;">
		                  <label> Role:
		                  </label>
		                  <label>
		                    <%= user.role != null ? user.role.name : '-' %>
		                  </label>
		                </div>
		                <div class="content" style="padding-left: 4px;">
		                  <label> Coach:
		                  </label>
		                  <label>
		                    <%= user.coach != null ? user.coach.first_name : '-' %>
		                  </label>
		                </div>
		                <div class="content" style="padding-left: 4px;">
		                  <label> Department:
		                  </label>
		                  <label>
		                    <%= user.department != null ? user.department : '-' %>
		                  </label>
		                </div>
			     	</div>
				</div>
			</div>
		</div>
		
		<div class="profile_picture col-md-4">
			<div class="user_profile">
				<!--<h4 style="text-align: left;">PERSONAL</h4>
				<hr>-->
				<div class="row">
					<div>
						<div class="photo" style="padding: 0px"><img src="/flat-ui/common-files/img/crew/vladimir-k.png" /></div>
		                
			       	</div>
			    </div>
			</div>
		</div>
	<div style="width: 100%; text-align: center; float: left; margin-top: 0.5em">
		<a href="/users/edit_profile/<%= user.id %>/<%= isFirstTime %>" class="btn btn-primary" style="margin-top: 2%">Edit</a>
	</div>
</div>
			
			
		
				
				
