<style>
	input[type="checkbox"] {
		width: 20px;
		height: 20px;
		display: inline-block;
	}
	
	b {
		font-weight: normal;
	}
	
	label {
		display: inline-block;
		width: 60%;
	}
	
	@media (max-width: 767px) {
		label {
			width: 85%;
		}
	}
</style>

<form action="/misc/view_feedback">
	<input type="submit" class="btn btn-primary" value="Feedback" style="margin-top: 2%">
</form>

<h4 style="text-align: center">View Feedback</h4>

<table class="table	table-bordered">
	
	<tr>
		<td colspan="2"><b>What went right</b></td>	
	</tr>		
	<tr>
		<td>Content allocated fits in time</td>
		<td><%= feedback.isContentAllocatedFitsInTime == false ? 'No' : 'Yes'%>
	</tr>
	<tr>
		<td>Student participation quality</td>
		<td><%= feedback.isStudentParticipationQuality == false ? 'No' : 'Yes'%>
	</tr>		
	<tr>
		<td>Class discipline</td>
		<td><%= feedback.isClassDiscipline == false ? 'No' : 'Yes'%>
	</tr>		
	<tr>
		<td>Student enjoyed the content/were interested</td>
		<td><%= feedback.isStudentEnjoyedTheContent == true ? 'Yes' : 'No'%>
	</tr>		
	<tr>
		<td>Learning experience yields learning objective</td>
		<td><%= feedback.isLearningExperience == true ? 'Yes' : 'No'%>
	</tr>
	<tr>
		<td colspan="2"><b>What went wrong</b></td>	
	</tr>		
	<tr>
		<td>Low attendance</td>
		<td><%= feedback.isLowAttendance == true ? 'Yes' : 'No'%>
	</tr>		
	<tr>
		<td>Infrastructure issues</td>
		<td><%= feedback.isInfrastructureIssues == true ? 'Yes' : 'No'%>
	</tr>		
	<tr>
		<td>Could not complete module</td>
		<td><%= feedback.isModuleNotCompleted == true ? 'Yes' : 'No'%>
	</tr>
	<tr>
		<td>It was hard to manage activity</td>
		<td><%= feedback.isActivityHard == true ? 'Yes' : 'No'%>
	</tr>	
	<tr>
		<td>Power failure</td>
		<td><%= feedback.isPowerFailure == true ? 'Yes' : 'No'%>
	</tr>		
	<tr>
		<td>Nothing at all was fine</td>
		<td><%= feedback.isNothingFine == true ? 'Yes' : 'No'%>
	</tr>			
</table>


