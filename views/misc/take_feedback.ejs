<style>
	input[type="checkbox"] {
		width: 20px;
		height: 20px;
		display: inline-block;
	}
	
	b {
		font-weight: normal;
	}
	
	label {
		display: inline-block;
		width: 60%;
	}
	
	@media (max-width: 767px) {
		label {
			width: 85%;
		}
	}
</style>

<form action="/misc/view_feedback">
	<input type="submit" class="btn btn-primary" value="View Feedback" style="margin-top: 2%">
</form>

<h4 style="text-align: center">Submit Feedback</h4>

<form role="form" method="POST" action="/misc/do_submit_feedback">
  
  <h6>What went right</h6>
  
  <div class="form-group">
    <label><b>Content allocated fits in time</b></label>
    <input type="checkbox" name="isContentAllocatedFitsInTime" />
  </div>
  
  <div class="form-group">
    <label><b>Student participation quality</b></label>
    <input type="checkbox" name="isStudentParticipationQuality" />
  </div>
  
  <div class="form-group">
    <label><b>Class discipline</b></label>
    <input type="checkbox" name="isClassDiscipline" />
  </div>
  
  <div class="form-group">
    <label><b>Student enjoyed the content/were interested</b></label>
    <input type="checkbox" name="isStudentEnjoyedTheContent" />
  </div>
  
  <div class="form-group">
    <label><b>Learning experience yields learning objective</b></label>
    <input type="checkbox" name="isLearningExperience" />
  </div>
  
  <h6>What went wrong</h6>
  
  <div class="form-group">
    <label><b>Low atttendance</b></label>
    <input type="checkbox" name="isLowAttendance" />
  </div>
  
  <div class="form-group">
    <label><b>Infrastructure issues</b></label>
    <input type="checkbox" name="isInfrastructureIssues" />
  </div>
  
  <div class="form-group">
    <label><b>Could not complete module</b></label>
    <input type="checkbox" name="isModuleNotCompleted" />
  </div>
  
  <div class="form-group">
    <label><b>It was hard to manage activity</b></label>
    <input type="checkbox" name="isActivityHard" />
  </div>
  
  <div class="form-group">
    <label><b>Power failure</b></label>
    <input type="checkbox" name="isPowerFailure" />
  </div>
  
  <div class="form-group">
    <label><b>Nothing at all was fine</b></label>
    <input type="checkbox" name="isNothingFine" />
  </div>
  
  <button type="submit" class="btn btn-success">Submit</button>
  
</form>


