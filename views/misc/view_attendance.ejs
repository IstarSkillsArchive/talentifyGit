<h4 style="text-align: center">View Attendance</h4>

<form role="form" method="POST" action="/misc/do_view_attendance">
  
  <div class="form-group">
    <label><b>Organization</b>:</label>
    <select name="OrganizationId" id="OrganizationId" class="form-control">
	<% organizations.forEach(function(org) { %>
		<option value = "<%= org.id %>"><%= org.name %></option>
	<% }); %>
	</select>
  </div>
  
  <div class="form-group">
    <label><b>Department</b>:</label>
    <select name="stream" id="stream" class="form-control">
		<option value = "BBM">BBM</option>
		<option value = "BCom">BCom</option>
	</select>
  </div>
  
  <div class="form-group">
  	<label><b>Date</b>:</label>
  	<input type="text" placeholder="yyyy-mm-dd" name="date" id="date" class="form-control"/>
  </div>
  
  <button type="submit" class="btn btn-success">Submit</button>
  
</form>


