

	<div class="modal-dialog">
	    <div class="modal-content">
	      	
	      <div class="modal-header">
	        <button type="button" class="close turbo-toggle" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title" id="myModalLabel">Test Instructions</h4>
	      </div>
	      <div class="modal-body" style="font-size: 14px">
	      		<% if(message != null) { %>
	      			<%= message %>
	      		<% } %>
				<% if(message == null && test != null) { %>
					<% if(rd != null && rd != 'null' && rd != '') { %>
					<div class="form-group">
						<b>You have already answered <%= rd %> out of the total <%= test_problem_count %> questions.</b>
					</div>
					<% } %>
					<div class="form-group">
						<label>Name:</label>&nbsp;<%= test.name %>
					</div>
					<div class="form-group">
						<label>Pass score:</label>&nbsp;<%= test.passScore != null ? test.passScore : 0 %>
					</div>
					<div class="form-group">
						<label>Duration(mins):</label>&nbsp;<%= test.duration %>
					</div>
					<div class="form-group">
						<label>Total no. of questions:</label>&nbsp;<%= test_problem_count %>
					</div>
					<div class="form-group">
						<label>No. of critical questions:</label>&nbsp;<%= test.criticalQuestions != null ? test.criticalQuestions : 0 %>
					</div>
					<div class="form-group" style="text-align: center">
						<% if(type == 'skill' || type == 'module') { %>
							<a class="btn btn-info" onclick="ajax_call('/content/show_content_question/<%= test.id %>/<%= content_id %>/<%= skill_id %>','uide4b3dde6bb5097375d99eb18a83d7146')"><%= rd != null && rd != 'null' && rd != '' ? 'Resume' : 'Start' %> Test</a>
						<% } %>
						<% if(type != 'skill' && type != 'module') { %>
							<a class="btn btn-info" onclick="modal_ajax_call('/content/show_content_question/<%= test.id %>/<%= content_id %>/<%= skill_id %>','uide4b3dde6bb5097375d99eb18a83d7146')"><%= rd != null && rd != 'null' && rd != '' ? 'Resume' : 'Start' %> Test</a>
						<% } %>
					</div>
				<% } %>
			</div>
		</div>
	</div>